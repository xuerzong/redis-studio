{
  "name": "redis-studio",
  "version": "0.0.0",
  "description": "This is a lightweight Redis Manager.",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev --workspace=app",
    "build:app": "npm run build --workspace=app",
    "build:cli": "npm run build --workspace=cli",
    "build:web": "npm run build --workspace=web",
    "build": "npm-run-all clean:* build:app build:cli",
    "copy:app": "cp -r ./app/dist ./cli/dist/app",
    "copy:readme": "cp README.md ./cli",
    "clean:cli": "rimraf ./cli/dist",
    "clean:app": "rimraf ./app/dist",
    "publish:cli": "npm publish --workspace=cli",
    "format": "prettier --write .",
    "release": "npm-run-all build copy:*",
    "prepare": "husky",
    "lint": "lint-staged",
    "desktop:dev": "npm run tauri dev --workspace=desktop",
    "desktop:build": "npm run tauri build --workspace=desktop",
    "replace-version": "node scripts/replace-version.mjs"
  },
  "workspaces": [
    "cli",
    "app",
    "desktop",
    "packages/*",
    "web"
  ],
  "private": true,
  "author": "xuerzong@gmail.com",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@types/node": "^24.2.0",
    "esbuild": "^0.25.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
